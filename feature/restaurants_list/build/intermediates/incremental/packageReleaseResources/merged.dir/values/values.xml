    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cloudy</item>
        <item name="colorPrimaryDark">@color/cloudy</item>
        <item name="colorAccent">@color/cloudy</item>
        <item name="actionMenuTextColor">@color/cloudy</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextStyle.Button</item>
        <item name="android:background">@drawable/btn_black_normal</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>
    <style name="Button.Orange" parent="Button">
        <item name="android:background">@drawable/bg_round_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DialogStyle" parent="">
        <item name="android:minWidth">@dimen/minWidth_dialog</item>
        <item name="android:minHeight">@dimen/minHeight_dialog</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="fontFamily">@font/sf_text_bold</item>
    </style>
    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontFamily">@font/sf_text_regular</item>
    </style>
    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>
    <style name="TextStyle.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sf_text_medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextStyle.EditText" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>
    <style name="TextStyleFlashBar" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>